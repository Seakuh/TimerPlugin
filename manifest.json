{
  "manifest_version": 3,
  "name": "Time Tracker Pro",
  "version": "1.0",
  "description": "Track your time with Pomodoro feature and CSV export",
  "permissions": [
    "storage",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
} 