{
  "manifest_version": 3,
  "name": "Time Tracker Pro",
  "version": "1.0",
  "description": "Track your time with Pomodoro feature and Google Sheets integration",
  "permissions": [
    "storage",
    "identity",
    "background"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "oauth2": {
    "client_id": "${YOUR_CLIENT_ID}",
    "scopes": [
      "https://www.googleapis.com/auth/spreadsheets"
    ]
  }
} 